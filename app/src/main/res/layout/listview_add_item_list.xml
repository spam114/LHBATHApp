<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnHelp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="mOnClick"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="도움말"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvCustomerLocation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="info"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="mOnClick"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="추가"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>


        <HorizontalScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewDong"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="동"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewSupervisor"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="등록자"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewLocation"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="세대/위치"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewDivision"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="구분"
                        android:textColor="@android:color/white"

                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewPartName"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="품명"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewPartSpec"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="규격"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewQty"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="수량"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewCause"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="원인"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewASDivision"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="A/S구분"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewComplain"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="불만내용"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewMeasure"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="조치사항"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewMeasurer"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@color/medium_gray"
                        android:gravity="center"
                        android:text="조치자"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <ListView
                    android:id="@+id/listView1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.4"
                    android:choiceMode="singleChoice"
                    android:listSelector="#ffdba1" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</layout>